var div = document.getElementById('div_<%= @answer.question_id %>');
var button = document.getElementById('button_<%= @answer.question_id %>');

div.classList.remove("success")
div.classList.remove("danger")

button.classList.remove("btn-outline-secondary")
button.classList.remove("btn-outline-success")
button.classList.remove("btn-outline-danger")

if (<%= @answer.correct %>) {
  div.classList.add("success")
  button.classList.add("btn-outline-success")

  $.bootstrapGrowl("Você Acertou!", {
    type: 'success', // (null, 'info', 'error', 'success')
    align: 'right', // ('left', 'right', or 'center')
    allow_dismiss: true,
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
} else {
  div.classList.add("danger")
  button.classList.add("btn-outline-danger")

  $.bootstrapGrowl("Você Errou!", {
    type: 'danger', // (null, 'info', 'error', 'success')
    align: 'right', // ('left', 'right', or 'center')
    allow_dismiss: true,
    stackup_spacing: 10 // spacing between consecutively stacked growls.
  });
}



